<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/new_name_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"
            />
        <EditText
            android:id="@+id/new_pass_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:drawableStart="@drawable/ic_vpn_lock_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"
            />
        <EditText
            android:id="@+id/new_phone_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone number"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:id="@+id/register_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Register"/>

    </LinearLayout>

</RelativeLayout>